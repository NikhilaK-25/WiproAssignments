package com.nk.wipro.Feign;


import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.*;
import com.nk.wipro.entity.Donor;
import java.util.List;

@FeignClient(name = "DonorService", path = "/api/v1/donor")
public interface BloodServiceFeign {

    
    @PostMapping("/add")
    Donor addDonor(@RequestBody Donor donor);

    
    @GetMapping("/all")
    List<Donor> getAllDonors();

    
    @GetMapping("/{id}")
    Donor getDonorById(@PathVariable Long id);

    
    @PutMapping("/update/{id}")
    Donor updateDonor(@PathVariable Long id, @RequestBody Donor donor);

    
    @DeleteMapping("/delete/{id}")
    void deleteDonor(@PathVariable Long id);
}
