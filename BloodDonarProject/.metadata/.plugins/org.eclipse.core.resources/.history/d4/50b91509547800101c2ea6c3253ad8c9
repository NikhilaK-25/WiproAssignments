package com.nk.wipro.Feign;

import com.nk.wipro.entity.Notification;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

@FeignClient(name = "NOTIFICATION-SERVICE", path = "/notifications")
public interface NotificationServiceFeign {
    @PostMapping
    Notification sendNotification(@RequestBody Notification notification);
}
